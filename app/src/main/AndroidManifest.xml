<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartSpendMax"
        tools:targetApi="31">
        <activity
            android:name=".LoginAdsMaker"
            android:exported="true" />
        <activity
            android:name=".AddNewTransaction"
            android:exported="true" />
        <activity
            android:name=".LoginUser"
            android:exported="true" />

        <!-- Main Activity Declaration (Now without the MAIN and LAUNCHER intent filter) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>

        <!-- Login Activity Declaration -->
        <activity android:name=".Login"
            android:exported="true"> <!-- Ensure this activity is exported if it's the entry point -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>